<%= form_with do |form| %>
  <h2 class="font-bold text-3xl text-center">Login</h2>
  <div class="my-5">
    <%= form.label :email, t('.email') %>
    <%= form.email_field :email, class: "input-field" %>
  </div>

  <div class="my-5">
    <%= form.label :password, t('.password') %>
    <%= form.password_field :password, class: "input-field" %>
  </div>

  <div class="my-5">
    <%= form.label :remember_me, t('.remember_me') %>
    <%= form.checkbox :remember_me, {}, true, false %>
  </div>  

  <div class="flex justify-between items-center mb-6">
    <%= link_to t('.forgot_password'), new_password_reset_path, class: "text-sm text-blue-600 hover:underline" %>
  </div>

  <div class="actions">
    <%= form.submit t('.login'), class: "rounded-lg py-3 w-full bg-green-600 text-black inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
