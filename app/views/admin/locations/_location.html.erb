<div class="bg-white shadow-lg rounded-lg p-6 hover:shadow-xl transition duration-300 flex flex-col h-full">
  <div class="flex justify-between items-center">
    <h3 class="text-xl font-semibold text-blue-600"><%= location.name %></h3>
    
    <% if location.is_default? %>
      <span class="bg-green-500 text-white py-1 px-3 rounded-full text-xs font-semibold">
        Default
      </span>
    <% end %>
  </div>
  <h4 class="text-l text-black-500"><%= location.address&.complete_address %></h4>
  <p class="text-gray-500 mt-2">Opening Time: <%= location.opening_time.to_fs(:time) %></p>
  <p class="text-gray-500 mt-2">Closing Time: <%= location.closing_time.to_fs(:time) %></p>
  
  <div class="mt-auto"></div>
  
  <div class="flex justify-between mt-4">
    <%= link_to t('.show'), admin_location_path(location), class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300" %>

    <%= link_to t('.update'), edit_admin_location_path(location), class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300" %>
    
    <%= link_to t('.delete'), admin_location_path(location), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-300" %>
  </div>
</div>
