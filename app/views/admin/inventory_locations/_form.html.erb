<%= render partial: "errors/errors", object: inventory_location.errors %>

<%= form_with model: inventory_location, url: submit_url, class: "contents", data: { turbo: false } do |form| %>
  <div class="my-5">
    <%= form.label :ingredient_id, t('.ingredient_select') %>
    <%= form.collection_select :ingredient_id, Ingredient.all.order(:name),
                              :id,
                              :name,
                              { prompt: t('.ingredient_select'), required: true }, 
                              class: "input-field"
    %>
  </div>

  <div class="my-5">
    <%= form.label :location_id, t('.location_select') %>
    <%= form.collection_select :location_id, Location.all.order(:name),
                              :id,
                              :name,
                              { prompt: t('.location_select'), required: true },
                              class: "input-field"
    %>
  </div>

  <div class="my-5">
    <%= form.label :quantity, t('.quantity') %>
    <%= form.number_field :quantity, required: true, class: "input-field" %>
  </div>

  <div class="text-center">
    <%= form.submit t('.submit'), class: "rounded-lg py-3 w-full mt-4 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
