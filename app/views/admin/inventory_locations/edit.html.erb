<% content_for :title, 'Change Inventory Quantity' %>

<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl text-center">Change Inventory Quantity</h1>

  <%= render partial: "edit_form", locals: { inventory_unit: @inventory_unit, inventory_location: @inventory_location, submit_url: admin_location_inventory_location_path(@location, @inventory_location) } %>

  <p class="mt-6 text-center">
    <%= link_to t(".back_to_inventories"), admin_location_inventory_locations_path, class: "inline-block bg-blue-600 text-white w-full py-2 rounded-md font-medium hover:bg-blue-700 transition" %>
  </p>
</div>
