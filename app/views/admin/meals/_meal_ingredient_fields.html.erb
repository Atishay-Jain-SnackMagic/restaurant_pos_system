<div class="ingredient-fields grid grid-cols-2 gap-4 items-end mb-4 relative nested-fields">
  <div>
    <%= form.label :ingredient_id, t('.ingredient'), class: "block text-sm font-medium mb-1" %>
    <%= form.collection_select :ingredient_id,
          Ingredient.all.order(:name),
          :id,
          :name,
          { prompt: t('.ingredient_select'), required: true },
          class: 'input-field w-full'
    %>
  </div>

  <div>
    <%= form.label :quantity, t('.quantity'), class: "block text-sm font-medium mb-1" %>
    <%= form.number_field :quantity, required: true, class: 'input-field w-full' %>
  </div>

  <%= button_tag t('.remove'), type: :button, class:"absolute top-0 right-0 text-sm text-red-600 hover:underline", data: { action: "nested-fields#remove" } %>
</div>
