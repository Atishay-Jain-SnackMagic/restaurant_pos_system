<div class="bg-white shadow-lg rounded-lg p-2 hover:shadow-xl transition duration-300 flex flex-col h-full">
  <%= image_tag(meal.image, class: 'mx-auto w-full h-20 mb-4') if meal.image.attached? %>
  <div class="flex justify-between items-center">
    <h3 class="text-xl font-semibold text-blue-600">
      <%= meal.name %>
    </h3>

    <div>
      <% if meal.is_veg? %>
        <span class="bg-green-500 mr-2 text-white py-1 px-3 rounded-full text-xs font-semibold">
          Veg
        </span>
      <% else %>
        <span class="bg-red-500 mr-2 text-white py-1 px-3 rounded-full text-xs font-semibold">
          Non-veg
        </span>
      <% end %>

      <% if meal.is_active? %>
        <span class="bg-green-500 text-white py-1 px-3 rounded-full text-xs font-semibold">
          Active
        </span>
      <% else %>
        <span class="bg-red-500 text-white py-1 px-3 rounded-full text-xs font-semibold">
          Inactive
        </span>
      <% end %>
    </div>
  </div>

  <h4 class="text-l text-black-500">Total Price: <%= number_to_currency(meal.total_price) %></h4>
  
  <div class="mt-4">
    <h5 class="text-sm font-semibold text-gray-700 mb-1">Ingredients:</h5>
    <ul class="list-disc list-inside text-sm text-gray-600 space-y-1">
      <% meal.ingredients.each do |ingredient| %>
        <li>
          <%= ingredient.name %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="mt-auto"></div>

  <div class="flex justify-between mt-4">
    <%= link_to t('.show'), admin_meal_path(meal), class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300" %>

    <%= link_to t('.update'), edit_admin_meal_path(meal), class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300" %>
    
    <%= link_to t('.delete'), admin_meal_path(meal), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-300" %>
  </div>
</div>
