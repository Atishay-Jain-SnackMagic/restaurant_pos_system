<div class="mb-6 p-6 bg-gray-100 rounded-xl shadow">
  <div class="flex justify-between items-start">
    <div>
      <p class="text-gray-700">
        <span class="font-medium text-gray-800">Pickup Location:</span>
        <%= order.location.address.complete_address %>
      </p>

      <p class="text-gray-700">
        <span class="font-medium text-gray-800">Pickup Time:</span>
        <%= order.pickup_time %>
      </p>

      <p class="text-gray-700">
        <span class="font-medium text-gray-800">Status:</span>
        <%= order.state.capitalize %>
      </p>

      <p class="text-gray-700">
        <span class="font-medium text-gray-800">Total:</span>
        <%= number_to_currency(order.total_amount) %>
      </p>
    </div>

    <div class="flex flex-col items-end space-y-2">
      <%= link_to 'View', order_path(number: order.number), class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
